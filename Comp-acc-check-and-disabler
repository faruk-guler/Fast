## Check Comp. Acc.

$DaysInactive = 181
$time = (Get-Date).AddDays(-$DaysInactive)
Get-ADComputer -Filter {LastLogonTimeStamp -lt $time} `
  -Properties Name, OperatingSystem, SamAccountName, DistinguishedName |
Select-Object Name, OperatingSystem, SamAccountName, DistinguishedName

# Disabler Comp. Acc.

$DaysInactive = 181
$time = (Get-Date).Adddays(-($DaysInactive))
Get-ADComputer -Filter {LastLogonTimeStamp -lt $time} -ResultPageSize 2000 -resultSetSize $null -Properties Name, OperatingSystem, SamAccountName, DistinguishedNamE | Disable-ADAccount
